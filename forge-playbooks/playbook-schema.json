{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Forge Playbook Schema",
  "description": "Schema for declarative workflow automation in Forge Flow 7.0",
  "type": "object",
  "required": ["name", "version", "steps"],
  "properties": {
    "name": { "type": "string", "description": "Playbook name (kebab-case)" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+$" },
    "description": { "type": "string" },
    "author": { "type": "string" },
    "tags": { "type": "array", "items": { "type": "string" } },
    "inputs": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": { "type": "string", "enum": ["string", "number", "boolean", "array", "object"] },
          "description": { "type": "string" },
          "required": { "type": "boolean", "default": false },
          "default": {}
        }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "action", "description"],
        "properties": {
          "id": { "type": "string" },
          "action": { "type": "string", "description": "module.function format" },
          "description": { "type": "string" },
          "params": { "type": "object" },
          "dependencies": { "type": "array", "items": { "type": "string" } },
          "condition": {
            "type": "object",
            "properties": {
              "if": { "type": "string" },
              "equals": {},
              "exists": { "type": "string" }
            }
          },
          "on_error": { "type": "string", "enum": ["fail", "continue", "skip_remaining"], "default": "fail" },
          "timeout_seconds": { "type": "integer", "minimum": 1 }
        }
      }
    },
    "outputs": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "from_step": { "type": "string" }
        }
      }
    }
  }
}