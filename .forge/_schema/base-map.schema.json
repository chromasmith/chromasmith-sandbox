{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Forge Map Base Schema",
  "description": "Base schema for all Forge Maps",
  "type": "object",
  "required": ["id", "created_at", "updated_at"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "minLength": 3,
      "maxLength": 100,
      "description": "Map identifier (kebab-case)"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Human-readable title"
    },
    "description": {
      "type": "string",
      "maxLength": 1000,
      "description": "Map description"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9_]+$"
      },
      "minItems": 0,
      "maxItems": 20,
      "uniqueItems": true,
      "description": "Classification tags"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "archived", "deleted"],
      "default": "active",
      "description": "Map lifecycle status"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "owner": {
      "type": "string",
      "description": "Owner identifier"
    },
    "related_maps": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "description": "Related map IDs"
    }
  },
  "additionalProperties": true
}